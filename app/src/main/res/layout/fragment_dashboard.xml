<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/light_blue"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="19dp"
            android:id="@+id/imgCUSTOMER"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/img_7"
            android:id="@+id/IMGback"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="19dp"
            android:src="@drawable/img_8"
            android:id="@+id/IMGnotification"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi,Mero Cusromer"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgCUSTOMER"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_bold"
            android:id="@+id/greet"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOOD MORNING"
            android:textColor="@color/white"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/greet"
            android:fontFamily="@font/inter_bold"
            android:id="@+id/tvGoodMorning"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="535dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="175dp"
        android:id="@+id/scroll"
        android:paddingBottom="10dp"
        >
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="15dp"
            android:paddingVertical="10dp"
            android:paddingBottom="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="12dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:id="@+id/balCART"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Balance is :"
                        android:layout_marginTop="6dp"
                        android:id="@+id/balanceTEXT"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="*****"
                        android:id="@+id/balanceAMOUNT"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/balanceTEXT"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Milk:"
                        android:id="@+id/totalmilkTEXT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/balanceAMOUNT"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="7dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="****"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:id="@+id/totalmilkAMOUNT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/totalmilkTEXT"
                        android:layout_marginStart="32dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Per liter:"
                        android:id="@+id/perliterTEXT"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/balanceAMOUNT"
                        android:layout_marginEnd="37dp"
                        android:layout_marginTop="7dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="****"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:id="@+id/perliterAMOUNT"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/perliterTEXT"
                        android:layout_marginEnd="37dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <!-- TOP CATEGORY -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_marginTop="145dp"
                app:cardElevation="0dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Categories:"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/topcategories"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_below="@id/topcategories"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rvCategory">

                        </androidx.recyclerview.widget.RecyclerView>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- OUR PRODUCT -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="275dp"
                app:cardElevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our Products:"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/ourproduct"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/ourproduct"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="horizontal"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/RecyclerProductDetail">

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <!--events-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_marginTop="495dp"
                app:cardElevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event and Notices:"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/events"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/events"
                        android:layout_marginHorizontal="1dp"
                        android:orientation="horizontal"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/RecyclerEvents"
                            android:layout_marginHorizontal="5dp"
                            >

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>