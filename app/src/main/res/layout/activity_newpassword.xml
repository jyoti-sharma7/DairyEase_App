<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword.NewpasswordActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:layout_marginStart="120dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="New Password "
        android:textColor="@color/light_blue"/>
    <View
        android:layout_width="130dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:background="@color/light_blue"></View>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:textStyle="normal"
        android:fontFamily="@font/inter_bold"
        android:textFontWeight="500"
        android:text=" Enter a new password "
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/RPpassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/baseline_check_circle_24"
        android:layout_marginTop="10dp"
        android:hint=" At least 8 digits"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:textSize="18dp"

        android:textStyle="normal"
        android:text=" Confirm Password "
        android:fontFamily="@font/inter_bold"
        android:textFontWeight="500"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/RPconformpass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/baseline_check_circle_24"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint=" *************"
        android:paddingStart="10dp"


        />

    <Button android:id="@+id/sendButton"
        android:layout_marginTop="25dp"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:text="Send"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginHorizontal="20dp"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/light_blue"/>

</LinearLayout>