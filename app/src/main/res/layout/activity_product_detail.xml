<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product.ProductDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/light_blue"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Details"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="85dp">


        <ImageView
            android:layout_width="220dp"
            android:layout_height="170dp"
            android:id="@+id/border"
            android:src="@drawable/imageborder"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="35dp"
            />

        <ImageView
            android:id="@+id/productImg"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginHorizontal="120dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/img_17"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:layout_below="@id/productImg"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vita cow milk"
            android:textSize="20dp"
            android:layout_toRightOf="@id/name"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:layout_below="@id/productImg"
            />
        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity(ltr):"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:layout_below="@id/name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/quantityAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/quantity"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price(Rs):"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_below="@id/quantity"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/perPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/price"
            android:layout_below="@id/quantityAmt"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:textStyle="normal"
            />
        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand Name:"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_below="@id/price"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/brandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vita"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@id/perPrice"
            android:layout_toRightOf="@id/brand"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:textStyle="normal"
            />
        <TextView
            android:id="@+id/productDiscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Description:"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_below="@id/brandName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvProductDiscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vita milk is a creamy and delicious soy milk made from fresh and natural whole soybeans. It is a great source of protein with a rich taste that you will love!
"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/productDiscription"
            android:layout_marginTop="7dp"
            android:textStyle="normal"
            />




    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>