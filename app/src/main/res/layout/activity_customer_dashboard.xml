<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_DashboardActivity">
    


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/light_blue"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/img_9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:id="@+id/imgCUSTOMER"
                />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/img_7"
                android:id="@+id/IMGback"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="19dp"
                android:src="@drawable/img_8"
                android:id="@+id/IMGnotification"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi,Mero Cusromer"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgCUSTOMER"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_bold"
                android:id="@+id/greet"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOOD MORNING"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/greet"
                android:fontFamily="@font/inter_bold"
                android:id="@+id/tvGoodMorning"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="520dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="165dp"
           android:id="@+id/scroll"
           android:paddingBottom="10dp"
           >
           <androidx.cardview.widget.CardView
               app:cardCornerRadius="20dp"
               app:cardElevation="20dp"
               android:layout_width="match_parent"
               android:layout_height="500dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginHorizontal="15dp"
               android:paddingVertical="10dp"
               android:paddingBottom="10dp"

               >

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="110dp"
                   android:layout_marginHorizontal="30dp"
                   android:layout_marginTop="12dp"
                   app:cardElevation="5dp"
                   app:cardCornerRadius="15dp"
                   android:id="@+id/balCART"
                   >
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Your Balance is :"
                           android:layout_marginTop="4dp"
                           android:id="@+id/balanceTEXT"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:hint="*****"
                           android:id="@+id/balanceAMOUNT"
                           android:textSize="17dp"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toBottomOf="@id/balanceTEXT"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Total Milk:"
                           android:id="@+id/totalmilkTEXT"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toBottomOf="@id/balanceAMOUNT"
                           android:layout_marginStart="30dp"
                           android:layout_marginTop="5dp"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:hint="****"
                           android:textSize="17dp"
                           android:id="@+id/totalmilkAMOUNT"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toBottomOf="@id/totalmilkTEXT"
                           android:layout_marginStart="30dp"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Per liter:"
                           android:id="@+id/perliterTEXT"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toBottomOf="@id/balanceAMOUNT"
                           android:layout_marginEnd="35dp"
                           android:layout_marginTop="5dp"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:hint="****"
                           android:textSize="17dp"
                           android:id="@+id/perliterAMOUNT"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toBottomOf="@id/perliterTEXT"
                           android:layout_marginEnd="30dp"
                           />
                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>


               <!-- TOP CATEGORY -->
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="130dp"
                   android:layout_marginTop="135dp"
                   app:cardElevation="0dp"
                   >
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Top Categories:"
                           android:textStyle="bold"
                           android:layout_marginStart="15dp"
                           android:layout_marginTop="5dp"
                           android:id="@+id/topcategories"
                           />
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="90dp"
                           android:layout_below="@id/topcategories"
                           >

                           <androidx.cardview.widget.CardView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:layout_marginStart="15dp"
                               android:id="@+id/MILKcart"
                               app:cardElevation="0dp">
                               <androidx.constraintlayout.widget.ConstraintLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent">
                                   <ImageView
                                       android:layout_width="60dp"
                                       android:layout_height="60dp"
                                       android:src="@drawable/img_12"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       android:id="@+id/imgMILK"
                                       />
                                   <ImageView
                                       android:layout_width="55dp"
                                       android:layout_height="55dp"
                                       android:src="@drawable/img_13"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="Milk"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toBottomOf="@id/imgMILK"/>
                               </androidx.constraintlayout.widget.ConstraintLayout>

                           </androidx.cardview.widget.CardView>

                           <androidx.cardview.widget.CardView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_toRightOf="@id/MILKcart"
                               android:layout_marginTop="10dp"
                               android:layout_marginStart="15dp"
                               android:id="@+id/buttercart"
                               app:cardElevation="0dp"
                               >
                               <androidx.constraintlayout.widget.ConstraintLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent">
                                   <ImageView
                                       android:layout_width="60dp"
                                       android:layout_height="60dp"
                                       android:src="@drawable/img_12"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       android:id="@+id/imgbutter"
                                       />
                                   <ImageView
                                       android:layout_width="50dp"
                                       android:layout_height="50dp"
                                       android:src="@drawable/img_14"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="Butter"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toBottomOf="@id/imgbutter"/>
                               </androidx.constraintlayout.widget.ConstraintLayout>

                           </androidx.cardview.widget.CardView>

                           <androidx.cardview.widget.CardView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_toRightOf="@id/buttercart"
                               android:layout_marginTop="10dp"
                               android:layout_marginStart="15dp"
                               android:id="@+id/yogurtcart"
                               app:cardElevation="0dp"
                               >
                               <androidx.constraintlayout.widget.ConstraintLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent">
                                   <ImageView
                                       android:layout_width="60dp"
                                       android:layout_height="60dp"
                                       android:src="@drawable/img_12"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       android:id="@+id/imgyogurt"
                                       />
                                   <ImageView
                                       android:layout_width="43dp"
                                       android:layout_height="43dp"
                                       android:src="@drawable/img_15"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       android:layout_marginTop="6dp"
                                       />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="Yogurt"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toBottomOf="@id/imgyogurt"/>
                               </androidx.constraintlayout.widget.ConstraintLayout>

                           </androidx.cardview.widget.CardView>

                           <androidx.cardview.widget.CardView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_toRightOf="@id/yogurtcart"
                               android:layout_marginTop="10dp"
                               android:layout_marginStart="15dp"
                               android:id="@+id/cheesecart"
                               app:cardElevation="0dp"
                               >
                               <androidx.constraintlayout.widget.ConstraintLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent">
                                   <ImageView
                                       android:layout_width="60dp"
                                       android:layout_height="60dp"
                                       android:src="@drawable/img_12"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       android:id="@+id/imgcheese"
                                       />
                                   <ImageView
                                       android:layout_width="45dp"
                                       android:layout_height="45dp"
                                       android:src="@drawable/img_16"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       android:layout_marginTop="6dp"
                                       />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="Cheese"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toBottomOf="@id/imgcheese"/>
                               </androidx.constraintlayout.widget.ConstraintLayout>

                           </androidx.cardview.widget.CardView>

                       </RelativeLayout>

                   </RelativeLayout>

               </androidx.cardview.widget.CardView>

               <!-- OUR PRODUCT -->
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="190dp"
                   android:layout_marginTop="260dp"
                   app:cardElevation="0dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Our Products:"
                           android:textStyle="bold"
                           android:layout_marginStart="15dp"
                           android:layout_marginTop="5dp"
                           android:id="@+id/ourproduct"
                           />


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="178dp"
                           android:layout_below="@id/ourproduct"
                           android:layout_marginHorizontal="5dp"
                           android:orientation="horizontal"
                           >

                           <androidx.recyclerview.widget.RecyclerView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:id="@+id/RecyclerProductDetail">

                           </androidx.recyclerview.widget.RecyclerView>
                       </LinearLayout>

                   </RelativeLayout>


               </androidx.cardview.widget.CardView>

               <!--events-->
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="260dp"
                   android:layout_marginTop="460dp"
                   app:cardElevation="0dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Event and Notices:"
                           android:textStyle="bold"
                           android:layout_marginStart="15dp"
                           android:layout_marginTop="5dp"
                           android:id="@+id/events"
                           />


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/events"
                           android:layout_marginHorizontal="1dp"
                           android:orientation="horizontal"
                           >

                           <androidx.recyclerview.widget.RecyclerView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:id="@+id/RecyclerEvents"
                               android:layout_marginHorizontal="5dp"
                               >

                           </androidx.recyclerview.widget.RecyclerView>
                       </LinearLayout>

                   </RelativeLayout>


               </androidx.cardview.widget.CardView>


           </androidx.cardview.widget.CardView>


       </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            >

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_navigationView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white"
                android:elevation="0dp"
                app:menu="@menu/bottom_nav"
                app:itemIconTint="@drawable/selector"
                app:labelVisibilityMode="selected"

                />




        </androidx.constraintlayout.widget.ConstraintLayout>
        

    </androidx.constraintlayout.widget.ConstraintLayout>


