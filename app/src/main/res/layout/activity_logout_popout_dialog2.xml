<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:layout_gravity="center"
    android:gravity="center"
    >


    <!-- Add your fragment UI elements here -->
    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="200dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="25dp"
        android:background="#9EFFFFFF"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Log Out?"
            android:textSize="20dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:layout_marginStart="35dp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />
        <RelativeLayout
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Are you  sure want to log out?"
                android:layout_marginTop="30dp"
                android:layout_marginStart="12dp"
                tools:ignore="RelativeOverlap" />
            <Button
                android:id="@+id/logout_yes_button"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="74dp"
                android:backgroundTint="@color/background1"
                android:text="Log Out"
                android:layout_marginLeft="33dp"


                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/logout_no_button"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="170dp"

                android:backgroundTint="@color/gray"
                android:text="Cancel"

                android:textColor="@color/black"

                android:textSize="18sp"

                app:cornerRadius="10dp" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>